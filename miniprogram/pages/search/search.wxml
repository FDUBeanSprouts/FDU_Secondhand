<!--pages/search/search.wxml-->
<!--搜索框-->
<view class="hmly-search">
  <view class="hmly-search-left">
    <text class="icon-search"></text>
    <input placeholder="搜索二手物品" bindinput="bindInput"  bindchange="bindChange" bindconfirm="bindConfirm" value="{{inputValue}}"></input>
  </view>
  <view class="hmly-search-right" bindtap="goBack">取消</view>
</view>

<!--热门搜索-->
<view class="hmly-hot" wx:if="{{!showitem}}">
  <!--提示标题-->
  <view class="hmly-title">
    <view class="title-text">热门商品</view>
  </view>
  <view class="hmly-hot-content">
    <view class="hmly-hot-items" wx:for="{{hotData}}" wx:key="index">
      <view class="hmly-item-left" bindtap="gotoDetails">
        <view class="{{index<3 ? 'text-red' : ''}}">{{index+1}}</view>
        <view class="hmly-item-title text-black">{{item.intro}}</view>
      </view>
    </view>
  </view>
</view>

<view class="search-result" wx:if="{{ showitem && goodsList.length}}">
  <!-- 上新推荐 -->
<view class="goods-recom">
  <!-- 这没有没有使用数据绑定，因为是练手而且数据比较少 -->
  <view class="recom-box">
    <view class="recom-box-item" bindtap="gotoDetails" data-coverImg="{{item.coverMiddle}}" data-title="{{item.intro}}" wx:for="{{goodsList}}" wx:key="{{index}}">
      <view class="recom-box-img">
        <image class="recom-box-item-icon" src="{{item.coverMiddle}}" mode="widthFix"></image>
      </view>
      <!--标题-->
      <view class="recom-box-text">{{item.intro}}</view>
      <!--价格+收藏数-->
      <view class="goods-des">
        <view class="goods-price">¥ {{item.price}}</view>
        <view class="goods-wants">{{item.nums}}收藏</view>
      </view>
      <!--卖家+标签-->
      <view class="goods-des2">
        <view class="goods-sell">
          {{item.name}}
        </view>
        <view class="goods-tag">
          {{item.tag}}
        </view>
      </view>
    </view>
  </view>
</view>
