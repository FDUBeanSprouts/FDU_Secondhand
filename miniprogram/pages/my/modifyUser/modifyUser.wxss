/* miniprogram/pages/addressAdmin/addressAdmin.wxss */

.wrapper {
  color: #000;
  width: 100vw;
  height: 100vh;
}
.text-title{
  width: 90%;
  height: 70rpx;
  margin-left: 290rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  font-size: 48rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  align-content: center;
}
.des-block{
  margin-left: 50rpx;
  overflow: hidden;
  width: 100%;
  height: 150rpx;
  text-align: left;
}

.btn {
  margin-top: 30rpx;
  width: 270rpx;
  height: 90rpx;
  background-color: #222429;
  color: white;
  border-radius: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}


input {
  float: left;
  margin-left: 40rpx;
  padding-left: 20rpx;
  width: 450rpx;
  height: 80rpx;
  background: #fff;
  color: #333;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
  font-size: 32rpx;
}
.name {
  float: left;
  margin-top: 15rpx;
  font-weight: bold;
  margin-left:35rpx;
}

.profile {
  float: left;
  margin-top: 30rpx;
  font-weight: bold;
  margin-left:35rpx;
}

.userinfo {
  margin-top: -20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
  padding-bottom:14rpx;
	background:#222429;
  width: 750rpx;
  height:250rpx;
  z-index:50;
  position: relative;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
}

.userinfo-avatar {
	width: 140rpx;
	height: 140rpx;
	margin: 20rpx;
	border-radius: 50%;
  border:2px solid white;
}

.userinfo-nickname {
  display:inline-block;
  background-color: #222429;
  color:white;
  font-size:30rpx;
}
.loading-wrap {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 150rpx;
}

.loading-wrap .img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 50rpx;
}

.loading-wrap .text {
  font-size: 26rpx;
  color: #999;
}