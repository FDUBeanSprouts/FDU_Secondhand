/* 二手上新 */
.goods-history{
  width: 90%;
  margin: 0rpx auto;
  margin-top: 7rpx;
}



.recom-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow: hidden;
}

.recom-box-item {
  width: 90%;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin-bottom: 30rpx;
  margin-left: 35rpx;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2);
}

.recom-box-img {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.2);
  overflow: hidden;
  position: relative;
  float: left;
}

.recom-box-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.recom-box-text {
  float: left;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

.goods-des {
  margin-bottom: 20rpx;
  width: 100%;
  padding: 20rpx 0rpx;
  text-align: center;
}

.goods-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff3456;
  float: left;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.goods-wants {
  font-size: 28rpx;
  float: right;
  color: #aaa;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}


.goods-tag {
  width: 150rpx;
  border-style: solid;
  border-width: 3rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: white;
  font-weight: bold;
  background: #63CCDA;
  float: left;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
}


.history-no-data{
  padding:30rpx 0;
  color:#222429;
  text-align: center;
}
.delete-icon{
  position: absolute;
  width: 25rpx;
  height: 25rpx;
}
.text-title{
  width: 90%;
  height: 70rpx;
  margin: 0rpx auto;
  margin-top: 25rpx;
  font-size: 38rpx;
  font-weight: bolder;
  display: flex;
  align-items: center;
  align-content: center;
  margin-bottom: 20rpx;
  text-align: center; 
  justify-content: center;
}
.information-box{
  min-height: 100%;
  background:white;
  color: #333;
  margin: 30rpx;
  margin-top: 10rpx;
  border-radius: 30rpx;
  box-shadow: 0 3px 6px 0 rgba(0,0,0,0.2);
}
.loading-wrap {
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 150rpx;
}
.loading-wrap .img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 50rpx;
}
.loading-wrap .text{
  font-size: 26rpx;
  color: #999;
}