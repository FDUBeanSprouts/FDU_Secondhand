/* miniprogram/pages/message/chatrm/chatrm.wxss */
.content{
  border-radius: 5px;
  border: none;
  width: 90%;
  height: 300rpx;
  margin: 50px auto 0;
  overflow: hidden;
  position: absolute;
  bottom: 0rpx;
}
.section{
  width: 100%;
  height: 70rpx;
  overflow-x: hidden;
  overflow-y: auto;
  border: 1px solid #cccccc; 
  padding-top: 30px;
  bottom: 0rpx;
  position: relative;
  }
  .sections::-webkit-scrollbar{
  display: none;
  }
.form{
  width: 90%;
  height: 70rpx;
  margin-top: 0rpx;
  position: relative;  
}
.form-textarea{
  outline: 2px solid #cccccc;
  border: 10rpx;
  display: block;
  float: left;
  width: 370rpx;
  height: 70rpx;
  font-size: 25px;
  text-align: top;
  line-height: 35px;
  resize: none;
  position: absolute;
}
.button{
  outline: none;
  display: block;
  border: 50rpx;
  bottom: 10rpx;
  margin-left: 150rpx;
  width: 100rpx;
  height: 100rpx;
  position: absolute;  
  color: white;
  background: tan;
}
.button-view{
  margin-top: 50rpx;
}
.button:active{
  background: #ccc;
}
.line{
  width: 500px;
  overflow: hidden;
}
  .left,.right{
  height: auto;
  font-size: 25px;
  line-height: 50px;
  border-radius: 10px;
  padding: 0 10px;
  overflow-wrap: break-word;
  margin-bottom: 20px;
  }
  .left{
  max-width: 400px;
  margin-left: 20px;
  float: left;
  background: rgb(243, 244, 245);
  }
  .right{
  max-width: 400px;
  float: right;
  margin-right: 20px;
  background: rgb(79, 230, 49);
  }

.textarea-class::placeholder{
  color:grey;
  font-size: 32;
  font-style: oblique;
  outline: 2px solid #cccccc;
  border: 10rpx;
  display: block;
  float: left;
  width: 370rpx;
  height: 35rpx;
  font-size: 25rpx;
  text-align: top;
  line-height: 35px;
  resize: none;
  position: absolute;
}